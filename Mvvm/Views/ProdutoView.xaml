<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvvmDemo.Mvvm.Views.ProdutoView"
             Title="ProdutoView">
    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center">

        <Label 
            Text="{Binding Produto.Nome}"
            FontSize="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Label 
            Text="{Binding Produto.Preco, StringFormat='R$ {0:F2}'}"
            FontSize="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Slider Value="{Binding Produto.Estoque}"
                Maximum="100" Minimum="0"/>

        <Switch IsToggled="{Binding Produto.Ativo}"
                HorizontalOptions="Start"/>

        <DatePicker Date="{Binding Produto.DataCompra}" FontSize="30"/>

        <Entry Text="{Binding Produto.Peso, StringFormat='{0:F3}'}" FontSize="30"/>
        

    </VerticalStackLayout>
</ContentPage>